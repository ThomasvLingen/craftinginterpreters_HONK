// Print statements
print("Hello" + " " + "HONK!");
print("Expect 6:");
print(1 + 2 + 3);
print("Expect true");
print(true);

// Expression statements
3 * 4;
3 > 2;
3 != 1;

// Variables + expressions
var three = 3;
var five = 5;
print("Expect true for the following:");
print(three + five == 8);
print(three < five);
print(!(three > five));

// Scopes + shadowing
var global_a = 10;
{
    var local_b = 5;
    print(global_a + local_b == 15);
}
{
    var local_b = 10;
    print(global_a + local_b == 20);

    {
        // This should shadow the top declaration
        var global_a = 1;
        print(global_a + local_b == 11);
    }
}

// if statements
print("Expect 3 trues");
if (true) {
    print(true);
}

if (false) {
    print(false);
}

var if_test_assign = 0;
if (if_test_assign = if_test_assign + 1) {
    print(true);
}

if (true == false) {
    print(false);
} else {
    print(true);
}

// while statements
print("Expect a count from 1 to 9");
var a = 0;
while ((a = a + 1) < 4) {
    print(a);
}

// for statements
for (var i = 4; i < 8; i = i + 1) {
    print(i);
}

var i = 7; // Note, this declaration doesn't clash with the one above
for (;(i = i + 1) < 10;) {
    print(i);
}

