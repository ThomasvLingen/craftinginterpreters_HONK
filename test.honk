// Print statements
print("Hello" + " " + "HONK!");
print("This should read 6:");
print(1 + 2 + 3);
print("Printing booleans:");
print(true);

// Expression statements
3 * 4;
3 > 2;
3 != 1;

// Variables + expressions
var three = 3;
var five = 5;
print("Expect true for the following:");
print(three + five == 8);
print(three < five);
print(!(three > five));

// Scopes + shadowing
var global_a = 10;
{
    var local_b = 5;
    print(global_a + local_b == 15);
}
{
    var local_b = 10;
    print(global_a + local_b == 20);

    {
        // This should shadow the top declaration
        var global_a = 1;
        print(global_a + local_b == 11);
    }
}